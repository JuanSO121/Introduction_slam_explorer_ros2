<?xml version="1.0" ?>
<sdf version="1.4">
  <world name="test_zone_world">
    <!-- Plano del suelo -->
    <include>
      <uri>model://ground_plane</uri>
    </include>
    
    <!-- Iluminación solar -->
    <include>
      <uri>model://sun</uri>
    </include>
    
    <!-- Modelo principal test_zone -->
    <include>
      <uri>model://test_zone</uri>
      <pose>0 0 0 0 0 0</pose>
    </include>
    
    <!-- Opcional: Mesas adicionales para más complejidad en la exploración -->
    <include>
      <uri>model://cafe_table</uri>
      <name>table1</name>
      <pose>4.05 3 0 0 0 1.57</pose>
    </include>
    
    <include>
      <uri>model://cafe_table</uri>
      <name>table2</name>
      <pose>-3 5 0 0 0 1.57</pose>
    </include>
    
    <!-- Cubo de demostración -->
    <include>
      <uri>model://demo_cube</uri>
      <pose>3.8 3.15 0.83 0 0 0</pose>
    </include>
    
    <!-- Configuración de física del mundo -->
    <physics name='default_physics' default='0' type='ode'>
      <gravity>0 0 -9.8066</gravity>
      <ode>
        <solver>
          <type>quick</type>
          <iters>10</iters>
          <sor>1.3</sor>
          <use_dynamic_moi_rescaling>0</use_dynamic_moi_rescaling>
        </solver>
        <constraints>
          <cfm>0</cfm>
          <erp>0.2</erp>
          <contact_max_correcting_vel>100</contact_max_correcting_vel>
          <contact_surface_layer>0.001</contact_surface_layer>
        </constraints>
      </ode>
      <max_step_size>0.004</max_step_size>
      <real_time_factor>1</real_time_factor>
      <real_time_update_rate>250</real_time_update_rate>
      <magnetic_field>6.0e-6 2.3e-5 -4.2e-5</magnetic_field>
    </physics>
    
    <!-- Configuración de la escena -->
    <scene>
      <ambient>0.4 0.4 0.4 1</ambient>
      <background>0.7 0.7 0.7 1</background>
      <shadows>true</shadows>
    </scene>
    
    <!-- Estado inicial del mundo -->
    <state world_name='test_zone_world'>
      <sim_time>0 0</sim_time>
      <real_time>0 0</real_time>
      <wall_time>0 0</wall_time>
    </state>
    
    <!-- Configuración de GUI -->
    <gui fullscreen='0'>
      <camera name='user_camera'>
        <pose frame=''>5 -5 2 0 0.275643 2.35619</pose>
        <view_controller>orbit</view_controller>
        <projection_type>perspective</projection_type>
      </camera>
    </gui>
  </world>
</sdf>